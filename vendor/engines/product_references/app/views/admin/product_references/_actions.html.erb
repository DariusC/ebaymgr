<ul>
  <% if Admin::ProductReferencesController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_product_references_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_product_reference_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::ProductReferencesController.sortable? and ProductReference.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Product References"),
                 admin_product_references_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Product References"),
                 admin_product_references_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>